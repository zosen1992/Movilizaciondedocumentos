<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movilizaciondedocumentos.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label x:Name="lblTimer"
               Text="Tiempo transcurrido: 00:00:00"
               FontSize="Medium"
               TextColor="Black"
               HorizontalOptions="Center" />


            <Entry Placeholder="Origendata" x:Name="txto"/>
            <Entry Placeholder="Destinodata" x:Name="txtd"/>

            <Button
        x:Name="btnIniciar"
        Text="Inicia"
        Clicked="BtnIniciar_Clicked"
        HorizontalOptions="Fill" />

            <Button
        x:Name="btnDetener"
        Text="Detener"
        Clicked="BtnDetener_Clicked"
        HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
